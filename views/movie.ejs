<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Flix</title>
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" />
  <link rel="stylesheet" href="/css/style.css" />

  <style>
body {
  font-family: Arial, sans-serif;
  background-color: #141414;
  color: #ffffff;
  margin: 0;
  padding: 0;
}

.movie-grid {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
  gap: 1.5rem;
  padding: 7rem 6rem 6rem;
}

.movie-card {
  background-color: #222;
  border-radius: 12px;
  overflow: hidden;
  position: relative;
  transition: transform 0.3s ease, box-shadow 0.3s ease;
  box-shadow: 0 4px 8px rgba(0, 0, 0, 0.3);
}

.movie-card:hover {
  transform: scale(1.05);
  color: red;
  box-shadow: 0 16px 32px rgba(254, 1, 1, 0.5);
}

.movie-poster {
  width: 100%;
  height: 300px;
  object-fit: cover;
}

.movie-title {
  padding: 0.5rem;
  text-align: center;
  font-weight: bold;
}
.movie-modal {
  display: none;
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 70vw;
  height: 70vh;
  background-color: #222;
  color: #ffffff;
  border-radius: 12px;
  overflow-y: auto;
  padding: 2rem;
  z-index: 1000;
  box-shadow: 0 16px 32px rgba(0, 0, 0, 0.8);
  animation: modalIn 0.5s ease-out;
}

.movie-modal.active {
  display: block;
}

@keyframes modalIn {
  from {
    transform: translate(-50%, -60%) scale(0.9);
    opacity: 0;
  }
  to {
    transform: translate(-50%, -50%) scale(1);
    opacity: 1;
  }
}

.modal-close {
  position: absolute;
  top: 1rem;
  right: 1rem;
  font-size: 1.5rem;
  color: #fff;
  cursor: pointer;
}
.modal-close:hover {
  color: red;
}
.modal-content {
  display: flex;
  flex-direction: column;
  gap: 1rem;
}

.modal-header {
  display: flex;
  flex-direction: column;
  gap: 0.5rem;
  text-align: center;
}

.modal-body {
  display: flex;
  gap: 1.5rem;
}

.movie-poster-large {
  width: 100%;
  height: auto;
  max-width: 400px;
  border-radius: 8px;
  transition: transform 0.3s ease, box-shadow 0.3s ease;
}

.movie-poster-large:hover {
  transform: scale(1.25);
  box-shadow: 0 4px 16px rgba(254, 1, 1, 0.5);
}

.movie-details {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 0.5rem;
}

.movie-details p {
  margin: 0;
}

.movie-gallery {
  display: flex;
  overflow-x: auto;
  overflow-y: hidden;
  gap: 1.5rem;
}

.gallery-image {
  width: 300px;
  height: 200px;
  border-radius: 8px;
  transition: transform 0.3s ease, box-shadow 0.3s ease;
}

.gallery-image:hover {
  transform: scale(1.25);
  box-shadow: 0 4px 16px rgba(254, 1, 1, 0.5);
}

.movie-details strong {
  color: red;
  transition: color 0.3s ease;
}

.movie-details strong:hover {
  color: blue;
}

.gg {
  color: red;
  text-decoration: none;
  transition: color 0.3s ease;
}

.gg:hover {
  color: blue;
}

#movie-gallery-title {
  color: red;
  text-align: center;
  margin-top: 1rem;
  font-size: 1.5rem;
  transition: color 0.3s ease;
}

#movie-gallery-title:hover {
  color: blue;
}

#modal-title {
  color: red;
  transition: color 0.3s ease;
}

#modal-title:hover {
  color: blue;
}

.movie-poster-large:hover, .gallery-image:hover {
  transform: scale(1.1);
  box-shadow: 0 4px 16px rgba(254, 1, 1, 0.5);
}

.movie-details p {
  margin-bottom: 1rem;
  font-size: 0.9rem;
}

.movie-details p strong:hover {
  color: blue;
}
  </style>
</head>

<body>


    <%- include('partials/header') %>


  <br><br><br><br><br><br>


  <div class="search-bar">
    <input type="text" id="search-input" placeholder="ðŸ” Search movies..." oninput="filterMovies()" />
  </div>
  


  <div class="movie-grid"></div>

  <div class="movie-modal" id="movie-modal">
    <span class="modal-close" onclick="closeModal()">&times;</span>
    <div class="modal-content">
      <div class="modal-header">
        <h2 id="modal-title"></h2>
      </div>
      <div class="modal-body">
        <img src="" alt="" class="movie-poster-large" id="modal-poster">
        <div class="movie-details" id="modal-details"></div>
      </div>
  
      <div id="movie-gallery-title">Gallery</div>
      
      <div class="movie-gallery" id="movie-gallery">
      </div>
    </div>
  </div>
  <%- include('partials/footer') %>

  <script>
    async function loadMovies() {
        try {
            const response = await fetch('/api/movie'); 
            if (!response.ok) {
                throw new Error(`HTTP error! status: ${response.status}`);
            }
            const movies = await response.json();
            const movieGrid = document.querySelector('.movie-grid');
            console.log(movies); 

            movieGrid.innerHTML = '';

            movies.forEach(movie => {
                const movieCard = document.createElement('div');
                movieCard.classList.add('movie-card');
                movieCard.innerHTML = `
                    <img src="${movie.Poster}" alt="${movie.Title}" class="movie-poster">
                    <div class="movie-title">${movie.Title}</div>
                `;
                movieCard.addEventListener('click', () => openModal(movie));
                movieGrid.appendChild(movieCard);
            });
        } catch (error) {
            console.error('Error loading movies:', error);
        }
    }

    function openModal(movie) {
        const modal = document.getElementById('movie-modal');
        document.getElementById('modal-title').textContent = movie.Title;
        document.getElementById('modal-poster').src = movie.Poster;

        const detailsHtml = `
            <a href="info" class="video-open">
                <img src="images/play.png" class="play" alt="" style="width: 60px; height: 60px;"/>
            </a>
            <p><strong>Plot:</strong> ${movie.Plot}</p>
            <p><strong>Year:</strong> ${movie.Year}</p>
            <p><strong>IMDb Rating:</strong> ${movie.imdbRating}</p>
            <p><strong>Metascore:</strong> ${movie.Metascore}</p>
            <p><strong>Rated:</strong> ${movie.Rated}</p>
            <p><strong>Released:</strong> ${movie.Released}</p>
            <p><strong>Runtime:</strong> ${movie.Runtime}</p>
            <p><strong>Genre:</strong> ${movie.Genre}</p>
            <p><strong>Director:</strong> ${movie.Director}</p>
            <p><strong>Writer:</strong> ${movie.Writer}</p>
            <p><strong>Actors:</strong> ${movie.Actors}</p>
            <p><strong>Language:</strong> ${movie.Language}</p>
            <p><strong>Country:</strong> ${movie.Country}</p>
            <p><strong>Awards:</strong> ${movie.Awards}</p>
        `;
        document.getElementById('modal-details').innerHTML = detailsHtml;

        const gallery = document.getElementById('movie-gallery');
        gallery.innerHTML = ''; 

        const galleryTitle = document.getElementById('movie-gallery-title');
        galleryTitle.style.display = 'block'; 

        movie.Images.forEach(imgUrl => {
            const img = document.createElement('img');
            img.src = imgUrl;
            img.alt = 'Gallery Image';
            img.classList.add('gallery-image');
            gallery.appendChild(img);
        });

        modal.classList.add('active'); 
    }

    function closeModal() {
        document.getElementById('movie-modal').classList.remove('active'); 
    }

    document.addEventListener('keydown', function(event) {
        if (event.key === 'Escape') {
            closeModal(); 
        }
    });

    function filterMovies() {
        const query = document.getElementById('search-input').value.toLowerCase();
        const movieCards = document.querySelectorAll('.movie-card');

        movieCards.forEach(card => {
            const title = card.querySelector('.movie-title').textContent.toLowerCase();
            card.style.display = title.includes(query) ? '' : 'none';
        });
    }

    loadMovies();
</script>


</body>
</html>
